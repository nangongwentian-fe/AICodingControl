{
  "name": "ai-coding-control",
  "version": "1.0.0",
  "type": "module",
  "description": "AI Coding Control - 一个强大的 AI 编程辅助工具",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:react\" \"pnpm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "electron .",
    "build": "pnpm run build:react && pnpm run build:electron",
    "build:react": "tsc && vite build",
    "build:electron": "electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "sass": "^1.97.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.aicodingcontrol.app",
    "productName": "AI Coding Control",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist",
      "electron"
    ]
  }
}
